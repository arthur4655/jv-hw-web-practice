<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewCar</servlet-name>
        <servlet-class>mate.controller.car.AddNewCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewManufacturer</servlet-name>
        <servlet-class>mate.controller.manufacturer.AddNewManufacturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewDriver</servlet-name>
        <servlet-class>mate.controller.driver.AddNewDriverController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getAllDrivers</servlet-name>
        <servlet-class>mate.controller.driver.GetAllDriversController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.car.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllManufacturers</servlet-name>
        <servlet-class>mate.controller.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllCars</servlet-name>
        <servlet-class>mate.controller.car.GetAllCarsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewManufacturer</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewDriver</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getAllDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllManufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>
</web-app>
